extends ../layout/dashboard

block main
  .card.card-flush
    .card-header.align-items-center.py-5.gap-2.gap-md-5
      .card-title
        .d-flex.align-items-center.position-relative.my-1
          include ../partials/svg/loop
          input.form-control.form-control-solid.w-250px.ps-14(type='text' data-agents-filter='search' placeholder='Rechercher Agent')
      .card-toolbar.flex-row-fluid.justify-content-end.gap-5
        a.btn.btn-light-success.font-weight-bolder.btn-sm(href='/agents/create')
          include ../partials/svg/two-circles
          | Nouveau Agent

    .card-body
      include ../partials/front/flash.pug
      #agents-datatable_wrapper.dataTables_wrapper.dt-bootstrap4.no-footer
        .table-responsive
          table#agents-datatable.table.align-middle.table-row-dashed.min-h-400px.fs-6.gy-5
            thead
              tr.text-start.text-gray-400.fw-bolder.fs-7.text-uppercase.gs-0
                th.w-10px.pe-2
                  .form-check.form-check-sm.form-check-custom.form-check-solid.me-3
                    input.form-check-input(type='checkbox' data-kt-check='true' data-kt-check-target='#agents-datatable .form-check-input' value='1')
                th Agent
                th Username
                th Téléphone
                th Status Compte
                th Ajouté
                th.min-w-100px Actions
            tbody.text-gray-600.fw-bold


block append footer
  script(src='/assets/js/main/agentsPage.js'  type="module")
